{
    "name": "dhii/event-manager-interface",
    "description": "An event manager standard based on PSR-14.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Dhii Team",
            "email": "development@dhii.co"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^5.3 | ^7.0",
        "dhii/psr-14": "^0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "ptrofimov/xpmock": "^1.1",
        "dhii/php-cs-fixer-config": "dev-php-5.3",
        "codeclimate/php-test-reporter": "<=0.3.2"
    },
    "autoload": {
        "psr-4": {
            "Dhii\\EventManager\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dhii\\EventManager\\UnitTest\\": "test/unit",
            "Dhii\\EventManager\\FuncTest\\": "test/functional"
        }
    },
    "scripts": {
        "test": "phpunit",
        "csfix": "php-cs-fixer fix -vvv"
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.1.x-dev"
        }
    }
}
